@model HW_8.Models.ViewModel.AthleteViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Html.DisplayFor(model => model.AthleteName)</h2>


<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Team)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Team)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

    </dl>
</div>


<div>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("MeetDate")
            </th>
            <th>
                @Html.DisplayName("EventTitle")
            </th>
            <th>
                @Html.DisplayName("MeetTitle")
            </th>
            <th>
                @Html.DisplayName("Time")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.ResultList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EventTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MeetTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
            </tr>
        }


    </table>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
