
@{
    ViewBag.Title = "RGBColor";
}

<h2>RGB Color </h2>


<div class="row">
    <div class="col-md-6">
        <form action="/Home/Clicked">
            <div class="form-group">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1">R</span>
                    <input type="number" class="form-control" name="red" min="0" max="255" placeholder="Red (0-255)" aria-describedby="sizing-addon1" value="@ViewBag.R" required>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon2">G</span>
                    <input type="number" class="form-control" name="green" min="0" max="255" placeholder="Green (0-255)" aria-describedby="sizing-addon2" value="@ViewBag.G" required>
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon3">B</span>
                    <input type="number" class="form-control" name="blue" min="0" max="255" placeholder="Blue (0-255)" aria-describedby="sizing-addon3" value="@ViewBag.B" required>
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Generate</button>
        </form>
    </div>
    @{
        if (ViewBag.R != null && ViewBag.G != null && ViewBag.B != null)
        {
            <div class="col-md-6">
                <div style="width: 200px; height: 200px; background-color: rgb(@ViewBag.R, @ViewBag.G, @ViewBag.B);"></div>
                    @{
                        int r = int.Parse(ViewBag.R);
                        int g = int.Parse(ViewBag.G);
                        int b = int.Parse(ViewBag.B);
                        ViewBag.hex = "#" + r.ToString("X2") + g.ToString("X2") + b.ToString("X2");
                        <h4>@ViewBag.hex</h4>
                    }
            </div>
        }
    }
</div>





