@model IEnumerable<HW6.Models.StockItem>

@{
    ViewBag.Title = "WorldWideImporters";
}

    <div class="jumbotron">
        <h1>Stock Search</h1>

        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            <div class="form-group">
                <div class="input-group-lg">
                    @Html.TextBox("q", null, htmlAttributes: new { @class = "form-control form-control-lg", placeholder = "Item Name" , required = "true"})
                </div>
            </div>
            <button class="btn btn-primary" type="submit">Search</button>
            if (Model.Count() == 0 && Request.QueryString["q"] != null)
            {
                <p>No Result Found</p>
            }
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item">@Html.ActionLink(item.StockItemName, "Detail/" + item.StockItemID, "Home")</li>
                }
            </ul>
        }

    </div>

